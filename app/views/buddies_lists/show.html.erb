<div>
  <h1 class= "buddy-name"> <%= @buddies_list.buddy.first_name %></h1>
</div>

  <div class="card-buddy">
    <%= image_tag(@buddies_list.buddy.profilepic, class: "avatar") %>
    <div class="card-buddy-infos">
      <h2> <%= @buddies_list.buddy.description %> </h2>
      <p><%= @buddies_list.buddy.location %></p>
    </div>
  </div>

  <div class="container_home">
  <h2 class="home_h2">🗓️ Les événements à venir 🗓️</h2>
  </div>


  <div>
    <h1> Ce que l'on pense de <%= @buddies_list.buddy.first_name %></h1>
  </div>

<div class="favorite" data-controller="favorite">
  <%= button_to buddy_path(@buddies_list), method: :patch, class: 'btn btn-accept' do %>
    <i class="fa-regular fa-heart like" data-action="click->favorite#like" data-favorite-target="like"></i>
  <% end %>
  <i class="fa-solid fa-heart dislike d-none" data-action="click->favorite#dislike" data-favorite-target="dislike"></i>
</div>


