<div class="reviews">
  <h3 style="text-align-last: center;">Commentaires :</h3>
  <% if @buddies_list.reviews.empty? %>
    <small><em class="text-muted">Soyez le premier à laisser un commentaire!</em></small>
  <% end %>
  <% @buddies_list.reviews.each do |review|  %>
    <% review.rating.times do %>
      <i class="fas fa-star star-yellow"></i>
    <% end %>
    <p> <i class="fa-solid fa-quote-left"> </i> <%= review.comment %> <i class="fa-solid fa-circle", style="font-size: 5px; color: grey"></i> <em>par <%= review.user.first_name %>
        <i class="fa-solid fa-circle", style="font-size: 5px; color: grey"></i> <small><em><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></p>
      <%= link_to review_path(review), class: 'trash',
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } do%>
        <i class="fa-regular fa-trash-can"></i>
        <% end %>
  <% end %>
</div>

<div class="container new">
  <div class="container title">
    <h1>Ajoutez un commentaire</h1>
  </div>
  <div class="container form">
    <%= simple_form_for [@buddies_list, @review], data: {turbo: "false"} do |f| %>
      <%= f.input :comment, label: "commentaire" %>
      <%= f.input :rating, as: :select, collection: (1..5), required: true, promt: "Notez votre experience", input_html: {data: { controller: "star-rating"} }  %>
      <%= f.submit 'Commentez', class:'btn-inscription'%>
    <% end %>
  </div>
</div>
