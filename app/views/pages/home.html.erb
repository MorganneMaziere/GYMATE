<h1 class="home_h1">Bienvenue <%= @user.first_name %> 💪</h1>

<div class="container_home">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: root_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type a keyword"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


<div class="favourite_budy">
  <h2 class="home_h2">❤️ Mes Buddys ❤️</h2>


</div>

<div class="container_home">
 <h2 class="home_h2">🗓️ Les événements à venir 🗓️</h2>
</div>
  <div class="calendar_cards">
      <% @events.each do |event| %>
        <div class = "event_card_home" style="background: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_url event.sport.image %>'); background-size: 100%; background-position: center;">

            <div >
            <div style="font-weight: bold; font-size: 24px; color: white;"><%= event.title %></div>
            <%= event.location %>
            <br><%= event.event_date.strftime("%d/%m/%Y") %>
            <br><%= event.sport.name%></div>
           <div style="text-align: center; padding: 3vmin;"> <%= link_to "Découvrir l'événement", event_path(event), class: "btn_inscription"%></div>
        </div>
      <% end %>
  </div>
</div>
