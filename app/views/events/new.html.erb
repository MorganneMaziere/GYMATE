<h1 class="h1-form">Créer un événement</h1>
<div class="container", style="padding: 4vmin;">
  <%= simple_form_for(@event) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :event_date %>
    <%= f.input :starting_hour %>
    <%= f.input :ending_hour %>
    <%= f.input :sport_id, collection: @sports, prompt: 'Select sport', label: "Sport" %>
    <%= f.submit "Créer l'événement ✅", class: "submit_btn" %>
  <% end %>
</div>
