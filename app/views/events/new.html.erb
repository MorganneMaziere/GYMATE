<h1>Créer un événement</h1>
<div class="container", style="padding: 4vmin;">
  <%= simple_form_for(@event) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :event_date %>
    <%= f.input :starting_hour %>
    <%= f.input :ending_hour %>
    <%= f.input :sport_id, collection: @sports, prompt: 'Select sport', label: "Sport" %>
    <%= f.button :submit %>
  <% end %>
</div>
